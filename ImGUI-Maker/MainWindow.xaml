<Window x:Class="ImGUI_Maker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImGUI_Maker"
        mc:Ignorable="d"
        Title="ImGUI Maker - Button Designer" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Element Properties -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
            <ScrollViewer>
                <StackPanel Margin="15">
                    <TextBlock Text="ImGui Elements" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <!-- Element Type Selection -->
                    <TextBlock Text="Element Type:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                    <ComboBox x:Name="ElementTypeComboBox" Margin="0,0,0,15" SelectedIndex="0" SelectionChanged="ElementTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Button"/>
                        <ComboBoxItem Content="Text"/>
                        <ComboBoxItem Content="Input Text"/>
                        <ComboBoxItem Content="Checkbox"/>
                        <ComboBoxItem Content="Slider"/>
                        <ComboBoxItem Content="ComboBox"/>
                    </ComboBox>
                    
                    <!-- Common Properties -->
                    <TextBlock Text="Position:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="X:" FontSize="10"/>
                            <TextBox x:Name="PosXTextBox" Text="100" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Y:" FontSize="10"/>
                            <TextBox x:Name="PosYTextBox" Text="100" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Button Properties -->
                    <StackPanel x:Name="ButtonPropertiesPanel" Visibility="Visible">
                        <TextBlock Text="Button Text:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="ButtonTextTextBox" Text="Button" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Size:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Width:" FontSize="10"/>
                                <TextBox x:Name="WidthTextBox" Text="120" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Height:" FontSize="10"/>
                                <TextBox x:Name="HeightTextBox" Text="30" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="Button Style:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <ComboBox x:Name="ButtonStyleComboBox" Margin="0,0,0,10" SelectedIndex="0">
                            <ComboBoxItem Content="Default"/>
                            <ComboBoxItem Content="Small"/>
                            <ComboBoxItem Content="Large"/>
                            <ComboBoxItem Content="Invisible"/>
                        </ComboBox>
                        
                        <TextBlock Text="Colors:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Background:" FontSize="10"/>
                                <Button x:Name="BackgroundColorButton" Background="#4CAF50" Height="25" Margin="0,2,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Text:" FontSize="10"/>
                                <Button x:Name="TextColorButton" Background="#FFFFFF" Height="25" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Text Properties -->
                    <StackPanel x:Name="TextPropertiesPanel" Visibility="Collapsed">
                        <TextBlock Text="Text Content:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="TextContentTextBox" Text="Sample Text" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Text Color:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <Button x:Name="TextOnlyColorButton" Background="#000000" Height="25" Margin="0,2,0,10"/>
                        
                        <CheckBox x:Name="IsBoldCheckBox" Content="Bold" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <!-- Input Text Properties -->
                    <StackPanel x:Name="InputTextPropertiesPanel" Visibility="Collapsed">
                        <TextBlock Text="Label:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="InputLabelTextBox" Text="Input" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Default Value:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="InputValueTextBox" Text="" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Max Length:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="MaxLengthTextBox" Text="100" PreviewTextInput="NumberValidationTextBox" Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="IsPasswordCheckBox" Content="Password Field" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <!-- Checkbox Properties -->
                    <StackPanel x:Name="CheckboxPropertiesPanel" Visibility="Collapsed">
                        <TextBlock Text="Label:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="CheckboxLabelTextBox" Text="Checkbox" Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="IsCheckedCheckBox" Content="Initially Checked" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <!-- Slider Properties -->
                    <StackPanel x:Name="SliderPropertiesPanel" Visibility="Collapsed">
                        <TextBlock Text="Label:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="SliderLabelTextBox" Text="Slider" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Value Range:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Min:" FontSize="10"/>
                                <TextBox x:Name="SliderMinTextBox" Text="0" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                <TextBlock Text="Max:" FontSize="10"/>
                                <TextBox x:Name="SliderMaxTextBox" Text="100" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                <TextBlock Text="Value:" FontSize="10"/>
                                <TextBox x:Name="SliderValueTextBox" Text="50" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- ComboBox Properties -->
                    <StackPanel x:Name="ComboBoxPropertiesPanel" Visibility="Collapsed">
                        <TextBlock Text="Label:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="ComboLabelTextBox" Text="ComboBox" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Items (one per line):" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="ComboItemsTextBox" Text="Option 1&#x0A;Option 2&#x0A;Option 3" 
                                 AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Selected Index:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                        <TextBox x:Name="ComboSelectedTextBox" Text="0" PreviewTextInput="NumberValidationTextBox" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <!-- Actions -->
                    <StackPanel Margin="0,15,0,0">
                        <Button x:Name="AddElementButton" Content="Add Element" Background="#2196F3" Foreground="White" 
                                Height="35" Margin="0,0,0,5" Click="AddElementButton_Click"/>
                        <Button x:Name="ClearAllButton" Content="Clear All" Background="#F44336" Foreground="White" 
                                Height="35" Margin="0,0,0,5" Click="ClearAllButton_Click"/>
                        <Button x:Name="GenerateCodeButton" Content="Generate Code" Background="#4CAF50" Foreground="White" 
                                Height="35" Margin="0,0,0,5" Click="GenerateCodeButton_Click"/>
                        <Button x:Name="PreviewButton" Content="Preview ImGUI" Background="#FF9800" Foreground="White" 
                                Height="35" Click="PreviewButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Center Panel - Design Canvas and Preview -->
        <Border Grid.Column="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Design Canvas -->
                <Border Grid.Row="0" Background="White">
                    <Grid>
                        <Canvas x:Name="DesignCanvas" Margin="10">
                            <Canvas.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                    <DrawingBrush.Drawing>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,20,20"/>
                                            </GeometryDrawing.Geometry>
                                            <GeometryDrawing.Brush>
                                                <SolidColorBrush Color="#F0F0F0"/>
                                            </GeometryDrawing.Brush>
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="#E0E0E0" Thickness="1"/>
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Canvas.Background>
                        </Canvas>
                        
                        <!-- Rulers -->
                        <Canvas x:Name="RulerCanvas" Panel.ZIndex="1"/>
                        
                        <!-- Design Canvas Label -->
                        <TextBlock Text="Design Canvas" VerticalAlignment="Top" HorizontalAlignment="Left" 
                                   Margin="15,15,0,0" FontSize="14" FontWeight="Bold" Foreground="#666666"/>
                    </Grid>
                </Border>
                
                <!-- Splitter -->
                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="#CCCCCC"/>
                
                <!-- ImGui Preview -->
                <Border Grid.Row="2" Background="#1E1E1E">
                    <Grid>
                        <TextBlock Text="ImGui Preview" VerticalAlignment="Top" HorizontalAlignment="Left" 
                                   Margin="15,15,0,0" FontSize="14" FontWeight="Bold" Foreground="White"/>
                        <Border x:Name="PreviewContainer" Margin="10,40,10,10" Background="#2D2D30" 
                                BorderBrush="#555555" BorderThickness="1">
                            <TextBlock x:Name="PreviewStatusText" Text="Click 'Preview ImGUI' to start preview" 
                                       Foreground="#CCCCCC" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Status Bar -->
                <TextBlock x:Name="StatusTextBlock" Text="Ready" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                           Margin="15,0,0,15" FontSize="12" Foreground="#CCCCCC"/>
            </Grid>
        </Border>

        <!-- Right Panel - Code Preview -->
        <Border Grid.Column="2" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Generated Code" FontSize="16" FontWeight="Bold" Margin="15,15,15,10"/>
                
                <ScrollViewer Grid.Row="1" Margin="15,0,15,15">
                    <TextBox x:Name="CodePreviewTextBox" FontFamily="Consolas" FontSize="11" 
                             Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                             IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
